<p id="notice"><%= notice %></p>

<h2>
  <%= @post.name %>
</h2>

<p>
  <%= @post.text %>
</p>

<p>
  <strong>Written by:</strong>
  <%= @post.user %>
</p>

<p><strong>Average rating:</strong> <%= @post.average_rating %></p>

<%= render 'rating_form' %>

<h3>Comments</h3>

<h4>New Comment</h4>

<%= render 'comment_form' %>

<ul>
  <% @comments.each do |comment| %>
    <li><strong><%= link_to comment.user, comment.user %>:</strong> comment.text</li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
